{
	"manifest_version": 2,

	"name": "Getting started example",
	"description": "This extension allows the user to change the background color",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [{
		"matches": ["*://www.youtube.com/*"],
		"js": ["content.js"],
		"run_at": "document_idle"
	}],
	
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"webNavigation"
	]
}